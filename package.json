{
  "name": "svelte-log-view",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.10.0",
  "exports": {
    ".": {
      "svelte": "./src/index.svelte"
    },
    "./css": "./src/log.css"
  },
  "description": "svelte log viewer component",
  "keywords": [
    "component",
    "log",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "0BSD",
  "scripts": {
    "prepare": "node --run prepare:vite",
    "prepare:vite": "vite build",
    "start": "vite",
    "test": "node --run test:playwright",
    "test:playwright": "npx playwright test",
    "docs": "documentation readme --section=API ./src**/*.mjs",
    "lint": "node --run lint:docs",
    "lint:docs": "documentation lint ./src**/*.mjs",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@sveltejs/vite-plugin-svelte": "^7.0.0",
    "documentation": "^14.0.3",
    "mf-styling": "^3.3.9",
    "npm-pkgbuild": "^20.6.4",
    "playwright": "^1.58.2",
    "reader-line-iterator": "^1.2.3",
    "semantic-release": "^25.0.3",
    "svelte": "^5.53.3",
    "vite": "^7.3.1",
    "vite-plugin-compression2": "^2.4.0"
  },
  "peerDependencies": {
    "svelte": "^5.53.0"
  },
  "optionalDependencies": {
    "mf-hosting-cloudflare": "^2.0.0",
    "mf-hosting-frontend": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/svelte-log-view.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/svelte-log-view/issues"
  },
  "homepage": "https://github.com/arlac77/svelte-log-view#readme",
  "pkgbuild": {
    "content": {
      "${install_dir}": "build/"
    },
    "api": "api/log",
    "csp_connect_src": "connect-src https://mocked-log-provider.markus-felten.workers.dev/ {{http_origin}} 'self';",
    "example": true,
    "frontend": true,
    "nginx_server_extra": "rewrite {{http_base_path}}/svelte-log-view/api/log {{http_base_path}}/mocked-log-provider/ permanent;"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-playwright",
      "arlac77/template-svelte-component"
    ]
  }
}
